RewriteEngine On
<IfModule mod_rewrite.c> 
#Removendo extensï¿½es de arquivos das URLs
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

#URL AMIGAVEIS
RewriteRule ^404  ../../view/404.php [NC,L]
RewriteRule ^403  ../../view/403.php [NC,L] 
 



</ifModule> 
