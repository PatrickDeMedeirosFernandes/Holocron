RewriteEngine On
<IfModule mod_rewrite.c> 
#Removendo extensï¿½es de arquivos das URLs
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

#URL AMIGAVEIS
#view
RewriteRule ^HOME/?$ view/index.php [NC,L]

RewriteRule ^O_que_e_ChatterBot/?$ view/sobrebot.php [NC,L]
RewriteRule ^O_que_e_AI/?$ view/sobreia.php [NC,L]
RewriteRule ^O_que_e_SW/?$  view/sobresw.php [NC,L]
RewriteRule ^Star_Wars/?$  view/sobresw.php [NC,L]
RewriteRule ^O_que_e_Holocron/?$   view/sobreholo.php [NC,L]
RewriteRule ^/?$ view/index.php [NC,L]
DirectoryIndex index.html index.php view/index.php 
RewriteRule ^Duvidas/?$  view/report.php [NC,L]


#administration
RewriteRule ^enviar/?$   controller/mensagem.php [NC,L]
RewriteRule ^chat/?$  controller/torreDeBabel.php [NC,L]
RewriteRule ^adm   admin/admin.php [NC,L]

RewriteRule ^adm   admin/admin.php [NC,L]

RewriteRule ^HOME/?$   admin/ [NC,L]
RewriteRule ^Perguntas_Nativas  admin/PergNat.php [NC,L]
RewriteRule ^Perguntas_Sem_Resp  admin/PergSemResp.php [NC,L]
RewriteRule ^Perguntas_Usuarios  admin/PergUser.php [NC,L]
RewriteRule ^Perguntas_Criadas_PorBot  admin/PergCreatBot.php [NC,L]
RewriteRule ^Cad-Lote-PergResp  admin/CadLotePerg.php [NC,L]
RewriteRule ^Cad-Uma-PergResp  admin/CadUmaPerg.php [NC,L]
RewriteRule ^Lista_Usuarios  admin/UserList.php [NC,L]
RewriteRule ^Cadastro_Usuario  admin/UserCad.php [NC,L]
RewriteRule ^Report   admin/report.php [NC,L]



RewriteRule ^Duvida([0-9]+)  admin/duvidaUnico.php?id=$1

# Apache configuration file (see httpd.apache.org/docs/2.2/mod/quickreference.html)
<FilesMatch ".(htm|html|css|js)$">
AddDefaultCharset UTF-8
</FilesMatch>

# desativa listagemde indixes de pasta
Options -Indexes
#ErrorDocument 403  <script>window.history.go(-1);</script>
#ErrorDocument 404 <script>window.history.go(-1);</script>
#Protegendo seu arquivo .htaccess
<files ~ "^.*\.([Hh][Tt][Aa])">
order allow,deny
deny from all
satisfy all
</files>

</ifModule>
