RewriteEngine On
<IfModule mod_rewrite.c> 
#Removendo extensï¿½es de arquivos das URLs
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

#URL AMIGAVEIS
RewriteRule ^O_que_e_Holocron/?$   view/sobreholo.php [NC,L]
